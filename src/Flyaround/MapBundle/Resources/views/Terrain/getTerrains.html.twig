{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Terrain list</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Altitude</th>
            <th>ICAO</th>
            <th>IATA</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for id, entity in data %}
            <tr>
                <td><a href="{{ path('get_terrain', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.latitude }}</td>
                <td>{{ entity.longitude }}</td>
                <td>{{ entity.altitude }}</td>
                <td>{{ entity.icao }}</td>
                <td>{{ entity.iata }}</td>
                <td>{{ entity.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('get_terrain', { 'id': entity.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('get_terrains') }}">
                Back to list
            </a>
        </li>
    </ul>
{% endblock %}
