{% if not app.user %}
    <div class="modal fade" id="register" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
								<div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3 id="myModalLabel">Inscription</h3>
                </div>
                <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(registration_form) }} method="POST" class="fos_user_registration_register">
										<div class="regist">
											<br>
											<h5 class="setcol">
                    		{{ form_label(registration_form.username) }} :
											</h5>
                    	{{ form_errors(registration_form.username) }}
                   	 	{{ form_widget(registration_form.username) }}

											<br>
											
											<h5 class="setcol">
                    		{{ form_label(registration_form.email) }} :
											</h5>
                    	{{ form_errors(registration_form.email) }}
                    	{{ form_widget(registration_form.email) }}
											<br>
											
											<h5 class="setcol">
                    		{{ form_label(registration_form.plainPassword.first) }} :
											</h5>
                    	{{ form_errors(registration_form.plainPassword.first) }}
                    	{{ form_widget(registration_form.plainPassword.first) }}
											<br>
											
											<h5 class="setcol">
                    		{{ form_label(registration_form.plainPassword.second) }} :
											</h5>
                    	{{ form_errors(registration_form.plainPassword.second) }}
                    	{{ form_widget(registration_form.plainPassword.second) }}

                    	{{ form_rest(registration_form) }}
										</div>
                    <div class="registsub">
												<br>
                        <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
												<br>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="connexion" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3 id="myModalLabel">Connexion</h3>
                </div>
                <div class="modal-body" style="text-align:center">
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        <label for="username" id="usertext">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
												<br>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
												<br>

                        <label for="password" id="passtext">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
												<br>
                        <input type="password" id="password" name="_password" required="required" />
												<br>

                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
												<br>
                        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endif %}

